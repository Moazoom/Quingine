{
    "tasks": [
      {
        "type": "cppbuild",
        "label": "use this one idiot (local)",
        "command": "g++.exe",
        "args": [
          "${file}",
          "-o",
          "${fileDirname}\\${fileBasenameNoExtension}.exe",
          "-Wall",
          "-I",
          "include/",
          "-L",
          "lib/",
          "-lglfw3",
          "-lgdi32",
          "-lopengl32",
          "-lassimp.dll"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "compiler: g++.exe"
      }
    ],
    "version": "2.0.0"
  }